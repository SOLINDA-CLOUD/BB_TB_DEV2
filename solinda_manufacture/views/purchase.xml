<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>

    <record id="purchase_order_form_breakdown" model="ir.ui.view">
      <field name="name">purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">

        <xpath expr="//div[@name='button_box']/button[@name='action_view_invoice']" position="after">
          <button type="object" name="show_mrp_prod" class="oe_stat_button" icon="fa-solid fa-wrench" attrs="{'invisible':[('mrp_count', '=', 0)]}">
            <field name="mrp_count" widget="statinfo" string="Manufacturing"/>
            <field name="mrp_ids" invisible="1"/>
          </button>
        </xpath>

        <xpath expr="//header" position="inside">
          <button string="Create Manufacturing" name="create_mo_production" type="object" class="oe_highlight"/>
        </xpath>

        <xpath expr="//field[@name='currency_id']" position="after">
          <field name="breakdown_id" invisible="1"/>
        </xpath>

        <!-- <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
          <page name="mo_detail" string="MO Detail">
            <field name="temp_prodmo_ids">
              <tree >
                <field name="product_tmpl_id" />
                <field name="product_qty" />
                <field name="purchase_id" />
              </tree>
            </field>
          </page>
        </xpath> -->

      </field>
    </record>

  </data>
</odoo>
